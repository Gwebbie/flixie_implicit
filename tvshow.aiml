<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
  <!-- TV-SERIE -->
  <category>
      <pattern><set>recommendation</set> TV-SERIE</pattern>
      <template>
      <think><set name="medium">serie</set></think>
      Wat voor soort tv-serie wil je kijken?</template>
  </category>

  <category>
      <pattern><set>recommendation</set> SERIE</pattern>
      <template>
      <think><set name="medium">serie</set></think>
      Wat voor soort tv-serie wil je kijken?</template>
  </category>

  <category>
      <pattern><set>recommendation</set> TV</pattern>
      <template>
      <think><set name="medium">serie</set></think>
      Wat voor soort tv-serie wil je kijken?</template>
  </category>

    <category>
      <pattern><set>genres</set></pattern>
      <template>
      <think><set name="genre"><input /></set></think>
        <condition name="genre" value="actie">
            Kijk je deze serie (genre: actie) alleen?
        </condition>
        <condition name="genre" value="drama">
            Kijk je deze serie (genre: drama) alleen?
        </condition>
        <condition name="genre" value="komedie">
            Kijk je deze serie (genre: komedie) alleen?
        </condition>
      </template>
  </category>

  <!-- actie minderjarig -->
  <category>
    <pattern><set>moviesaction</set></pattern>
    <that>Ik heb de volgende actietitels voor minderjarige kijkers: ^</that>
    <template>
      <think><set name="keuze"><input /></set></think>
      <get name="keuze" />, goede keuze! Veel kijkplezier!
    </template>
  </category>

  <!-- drama minderjarig -->
  <category>
    <pattern><set>moviesdrama</set></pattern>
    <that>Ik heb de volgende dramatitel voor minderjarige kijkers: ^</that>
    <template>
      <think><set name="keuze"><input /></set></think>
      <get name="keuze" />, goede keuze! Veel kijkplezier!
    </template>
  </category>

  <!-- komedie minderjarig -->
  <category>
    <pattern><set>moviescomedy</set></pattern>
    <that>Ik heb de volgende komedietitel voor minderjarige kijkers: ^</that>
    <template>
      <think><set name="keuze"><input /></set></think>
      <get name="keuze" />, goede keuze! Veel kijkplezier!
    </template>
  </category>

  <!-- actie meerderjarig -->
  <category>
    <pattern></pattern>
    <that>De beste titels voor genre 'actie' zijn: ^</that>
    <template>
      <think><set name="keuze"><input /></set></think>
      <get name="keuze" />, goede keuze! Veel kijkplezier!
    </template>
  </category>

  <!-- drama meerderjarig -->
  <category>
    <pattern></pattern>
    <that>De beste titels voor genre 'drama' zijn: ^</that>
    <template>
      <think><set name="keuze"><input /></set></think>
      <get name="keuze" />, goede keuze! Veel kijkplezier!
    </template>
  </category>

  <!-- komedie meerderjarig -->
  <category>
    <pattern></pattern>
    <that>De beste titels voor genre 'komedie' zijn: ^</that>
    <template>
      <think><set name="keuze"><input /></set></think>
      <get name="keuze" />, goede keuze! Veel kijkplezier!
    </template>
  </category>

  <!-- kijkt niet alleen -->
  <category>
      <pattern><set>nee</set></pattern>
      <that>Kijk je deze serie _ alleen</that>
      <template>Met wie ga je samen kijken?</template>
  </category>

  <category>
      <pattern>^<set>partners</set></pattern>
      <that>Met wie ga je samen kijken</that>
      <template>
      <think><set name="partner"><input /></set></think>
      Ben je zelf jonger dan 16 of is een van de kijkers jonger dan 16?</template>
  </category>

  <category>
      <pattern><set>ja</set></pattern>
      <that>Ben je zelf jonger dan 16 of is een van de kijkers jonger dan 16</that>
      <template>
          <condition name="genre" value="actie">
              De beste actitetitels voor minderjarige kijkers zijn: Arrow en Blindspot. Welke wil je zien?
          </condition>
          <condition name="genre" value="drama">
              De beste dramatitels voor minderjarige kijkers zijn: Stranger Things, Sherlock en The Flash. Welke wil je zien?
          </condition>
          <condition name="genre" value="komedie">
              De beste komedietitels voor minderjarige kijkers zijn: How I Met Your Mother, Modern Family en Rick and Morty. Welke wil je zien?
          </condition>
      </template>
  </category>

  <category>
      <pattern><set>nee</set></pattern>
      <that>Ben je zelf jonger dan 16 of is een van de kijkers jonger dan 16</that>
      <template>
          <condition name="genre" value="actie">
            De beste titels voor genre 'actie' zijn: The Punisher, Arrow en Blindspot. Welke wil je zien?
        </condition>
        <condition name="genre" value="drama">
            De beste titels voor genre 'drama' zijn: Stranger Things, Sherlock en The Flash. Welke wil je zien?
        </condition>
        <condition name="genre" value="komedie">
            De beste titels voor genre 'komedie' zijn: How I Met Your Mother, Modern Family en Rick and Morty. Welke wil je zien?
        </condition>
      </template>
  </category>

  <!-- kijkt alleen -->
  <category>
      <pattern><set>ja</set></pattern>
      <that>Kijk je deze serie _ alleen</that>
      <template>
      <think><set name="partner">alleen</set></think>
      Ben je jonger dan 16?</template>
  </category>

  <!-- kijkt alleen; niet jonger dan 16 -->
  <category>
      <pattern><set>nee</set></pattern>
      <that>Ben je jonger dan 16</that>
      <template>
        <condition name="genre" value="actie">
            De beste actietitels om alleen te kijken zijn: The Punisher, Arrow en Blindspot. Welke wil je zien?
        </condition>
        <condition name="genre" value="drama">
            De beste dramatitels om alleen te kijken zijn: Stranger Things, Sherlock en The Flash. Welke wil je zien?
        </condition>
        <condition name="genre" value="komedie">
            De beste komedietitels om alleen te kijken zijn: How I Met Your Mother, Modern Family en Rick and Morty. Welke wil je zien?
        </condition>
      </template>
  </category>

  <!-- kijkt alleen; jonger dan 16 -->
  <category>
      <pattern><set>ja</set></pattern>
      <that>Ben je jonger dan 16</that>
      <template>
          <condition name="genre" value="actie">
              De beste actietitels voor minderjarigen om alleen te kijken zijn: Arrow en Blindspot. Welke wil je zien?
          </condition>
          <condition name="genre" value="drama">
              De beste dramatitels voor minderjarigen om alleen te kijken zijn: Stranger Things, Sherlock en The Flash. Welke wil je zien?
          </condition>
          <condition name="genre" value="komedie">
              De beste komedietitels voor minderjarigen om alleen te kijken zijn: How I Met Your Mother, Modern Family en Rick and Morty. Welke wil je zien?
          </condition>
      </template>
  </category>

</aiml>
